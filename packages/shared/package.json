{
  "name": "@repo/shared",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./date": {
      "import": "./dist/date.js",
      "require": "./dist/date.js"
    },
    "./diff": {
      "import": "./dist/diff.js",
      "require": "./dist/diff.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "tsc --project tsconfig.json --watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "tsc --noEmit"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "diff": "^8.0.2"
  }
}
