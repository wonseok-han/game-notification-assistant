{
  "name": "game-notification-assistant",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:assistant": "turbo run dev --filter=game-notification-assistant",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:ui": "turbo run test:ui --filter=e2e",
    "test:headed": "turbo run test:headed --filter=e2e",
    "test:debug": "turbo run test:debug --filter=e2e",
    "test:report": "turbo run test:report --filter=e2e"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22.18.0",
    "pnpm": ">=9.0.0"
  }
}
