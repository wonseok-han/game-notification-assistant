{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      "@assets": ["./public/assets"],
      "@assets/*": ["./public/assets/*"],
      "@entities": ["./src/entities"],
      "@entities/*": ["./src/entities/*"],
      "@features": ["./src/features"],
      "@features/*": ["./src/features/*"],
      "@shared": ["./src/shared"],
      "@shared/*": ["./src/shared/*"],
      "@widgets": ["./src/widgets"],
      "@widgets/*": ["./src/widgets/*"],
      "@": ["./src"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/shared/types/svgr.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
