{
  "name": "game-notification-assistant",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --hostname 0.0.0.0 --turbo --port 3000",
    "dev:prod": "NODE_ENV=production dotenv -e .env.prod -- next dev --hostname 0.0.0.0 --turbo --port 3000",
    "dev:indexgen": "indexgencli --watch",
    "build": "next build",
    "build:prod": "dotenv -e .env.prod -- next build",
    "lint": "next lint --fix",
    "check-types": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@repo/shared": "workspace:*",
    "@repo/ui": "workspace:*",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.55.0",
    "@tanstack/react-query": "^5.85.6",
    "@vercel/analytics": "^1.5.0",
    "next": "^15.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tesseract.js": "^6.0.1",
    "uuid": "^11.1.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.30.0",
    "indexgen-cli": "^1.0.2",
    "postcss": "^8.5.6",
    "sass": "^1.89.2",
    "tailwindcss": "^4.1.11",
    "typescript": "5.8.2"
  },
  "optionalDependencies": {
    "@tailwindcss/oxide-linux-arm64-musl": "^4.1.11",
    "lightningcss-linux-arm64-musl": "^1.30.1"
  }
}
