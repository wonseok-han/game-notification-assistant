{
  "name": "e2e",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "playwright test --reporter=list",
    "test:verbose": "FORCE_COLOR=1 playwright test",
    "test:html": "playwright test --reporter=html",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "codegen": "playwright codegen http://localhost:3000 --save-storage=./.storage --load-storage=./.storage"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "typescript": "5.8.2"
  }
}
