{
  "name": "e2e",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "env:setup": "cp .env.local .env && echo '✅ .env 파일이 생성되었습니다. 필요에 따라 수정하세요.'",
    "pretest": "pnpm env:setup",
    "test": "playwright test",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile-chrome": "playwright test --project=mobile-chrome",
    "test:mobile-safari": "SHOW_STEP_LOG=true playwright test --project=mobile-safari",
    "test:html": "playwright test --reporter=html",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "codegen": "playwright codegen http://localhost:3000 --save-storage=./.storage --load-storage=./.storage"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "typescript": "5.8.2"
  }
}
