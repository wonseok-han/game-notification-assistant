{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "test:ui": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test:headed": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test:debug": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test:report": {
      "cache": false
    }
  }
}
